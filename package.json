{
  "name": "typescript-storyshots",
  "version": "1.0.0",
  "description": "Sample project using StoryShots, Jest and TypeScript",
  "main": "index.js",
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xogeny/typescript-storyshots.git"
  },
  "keywords": [
    "Jest",
    "TypeScript",
    "Storybook",
    "StoryShots",
    "React"
  ],
  "author": "Michael M. Tiller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xogeny/typescript-storyshots/issues"
  },
  "homepage": "https://github.com/xogeny/typescript-storyshots#readme",
  "dependencies": {
    "@types/react": "^15.0.33",
    "react": "^15.6.1"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.1.7",
    "@storybook/react": "^3.1.7",
    "@types/jest": "^20.0.2",
    "@types/react-dom": "^15.5.1",
    "@types/react-test-renderer": "^15.5.1",
    "@types/storybook__react": "^3.0.1",
    "awesome-typescript-loader": "^3.2.1",
    "jest": "^20.0.4",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "ts-jest": "^20.0.6",
    "typescript": "^2.4.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}